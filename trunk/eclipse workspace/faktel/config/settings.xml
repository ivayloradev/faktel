<config>
	<!-- generic configurations. -->
	<definitions>
		<inputs>
			<input name="mtelInput" input="examples/mtel/0168888254_invoice_a_.csv" mappingFile="config\mtel-mapping.in" />
		</inputs>
		<filters>
			<filter name="DummyFilter2" class="com.faktel.features.DummyFilter">
				<arg name="argument21" value="value21" />
				<arg name="argument21" value="value22" />
			</filter>
			<filter name="DummyFilter1" class="com.faktel.features.DummyFilter">
				<arg name="argument1" value="value1" />
				<arg name="argument1" value="value2" />
			</filter>
		</filters>
		
		<outputs>
			<output name="outputFile" type="XLSWriter"> 
				<arg name="output" value="examples\mtel\FakTel-output.xls" />
				<arg name="mappingFile" value="config\mtel-mapping.out" />
				<arg name="sheetName" value="Generated by XLSWriter" />
			</output>
		</outputs>
	</definitions>
	
	<layout>
	  <hbox>
	    <view class="com.faktel.features.SimpleGrid" name="table" width="300" height="200" />
	    <view class="com.faktel.features.PieChartView" name="pie" width="200" height="200" />
	  </hbox>
	</layout>
	
	<!-- IMPORTANT FLOW. -->
	<flow>
		<input  name="mtelInput" />
	    <filter name="DummyFilter1" /><filter name="DummyFilter2" />
		<output name="outputFile" />
	</flow>
</config>